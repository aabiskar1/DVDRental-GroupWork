@model IEnumerable<DVDRentalSystem.Models.DVDDetails>

@{
    ViewBag.Title = "DVDNotBorrowedInMonth";
}

<h2>DVD NOT LOANED SINCE LAST MONTH</h2>
<h4>Task 13</h4>
<style>
    .bg-primary {
        background-color: dodgerblue;
    }
</style>
<table class="table table-striped table-bordered table-hover">
    <thead class="bg-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CoverImagePath)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>


        </tr>
        </thead>


        @foreach (var item in Model)
        {
            <tr>

                <td>
                    <img src="@Url.Content(item.CoverImagePath)" width="100" height="150" />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>


            </tr>
        }

</table>
