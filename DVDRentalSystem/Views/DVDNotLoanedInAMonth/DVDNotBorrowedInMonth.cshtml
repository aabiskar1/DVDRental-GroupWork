@model IEnumerable<DVDRentalSystem.Models.DVDDetails>

@{
    ViewBag.Title = "DVDNotBorrowedInMonth";
}

<h2>DVD Not Borrowed In A Month</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CoverImagePath)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>


        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        <img src="@Url.Content(item.CoverImagePath)" width="100" height="150" />
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Genre)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.ReleaseDate)
    </td>


</tr>
}

</table>
