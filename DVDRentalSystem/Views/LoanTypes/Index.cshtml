@model IEnumerable<DVDRentalSystem.Models.LoanType>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LoanTypeName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LoanTypeName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.LoanTypeId }) |
                @Html.ActionLink("Details", "Details", new { id = item.LoanTypeId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.LoanTypeId })
            </td>
        </tr>
    }
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>

    }
</table>
